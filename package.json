{
  "name": "byggbot",
  "version": "1.0.2",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf build/* dist/*",
    "webpack-build": "npx webpack --mode production",
    "build": "npm run clean && npm run webpack-build && electron-builder --mac && npm run verify-signing",
    "dev-server": "NODE_ENV=development webpack serve --mode development",
    "electron": "electron .",
    "dev": "NODE_ENV=development webpack serve --mode development",
    "find-circular": "madge --circular --extensions js,jsx src/",
    "dev-app": "concurrently \"npm run dev\" \"wait-on tcp:3002 && cross-env NODE_ENV=development electron .\"",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "verify-signing": "codesign -v -v --deep 'dist/mac-arm64/Byggbot.app' && spctl --assess --verbose --type execute 'dist/mac-arm64/Byggbot.app'",
    "test-db": "node scripts/test-db-connection.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "ByggBot",
  "dependencies": {
    "@azure/msal-browser": "^4.2.0",
    "@azure/msal-node": "^3.2.2",
    "@azure/msal-react": "^3.0.4",
    "@babel/runtime": "^7.23.9",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@mui/styles": "^5.15.10",
    "@mui/system": "^5.15.10",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.7",
    "pg": "^8.13.1",
    "pg-connection-string": "^2.7.0",
    "pg-int8": "^1.0.1",
    "pg-pool": "^3.7.0",
    "pg-protocol": "^1.7.0",
    "pg-types": "^4.0.2",
    "postgres-interval": "^4.0.2",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0",
    "webpack": "^5.90.1",
    "webpack-dev-middleware": "^6.1.1",
    "xtend": "^4.0.2",
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "lru-cache": "^10.2.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.9",
    "@electron/notarize": "^2.5.0",
    "@svgr/webpack": "^8.1.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "electron": "^28.2.3",
    "electron-builder": "^25.1.8",
    "electron-devtools-installer": "^3.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "https-browserify": "^1.0.0",
    "madge": "^8.0.0",
    "mini-css-extract-plugin": "^2.8.0",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.10",
    "url": "^0.11.4",
    "wait-on": "^7.2.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0",
    "@npmcli/fs": "^3.1.0",
    "node-util": "^0.0.1"
  },
  "resolutions": {
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "inflight": "^2.0.0",
    "@npmcli/move-file": "^3.0.0",
    "npmlog": "^7.0.0",
    "gauge": "^5.0.0"
  },
  "build": {
    "appId": "no.bmf.byggbot",
    "productName": "Byggbot",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/byggbot@3x.icns"
    },
    "files": [
      "build/**/*",
      "src/electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@azure/msal-node/**/*",
      "node_modules/electron-log/**/*",
      "node_modules/pg/**/*",
      "node_modules/pg-connection-string/**/*",
      "node_modules/pg-pool/**/*",
      "node_modules/pg-protocol/**/*",
      "node_modules/pg-types/**/*",
      "src/electron/preload.js",
      "src/electron/services/**/*",
      "src/electron/config/**/*"
    ],
    "afterSign": "scripts/notarize.js",
    "publish": [
      {
        "provider": "github",
        "owner": "Byggmesterforsikring",
        "repo": "calcpro",
        "private": true,
        "releaseType": "release",
        "token": "${env.GH_TOKEN}"
      }
    ],
    "generateUpdatesFilesForAllChannels": true,
    "npmRebuild": true
  }
}