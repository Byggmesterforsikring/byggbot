{
  "name": "byggbot",
  "version": "1.0.10",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rm -rf build/* || true && rm -rf dist/* || true",
    "webpack-build": "npx webpack --mode production",
    "build": "npm run clean && npm run webpack-build && NODE_ENV=production electron-builder --mac --win",
    "build-mac": "NODE_ENV=production electron-builder --mac",
    "build-win": "NODE_ENV=production electron-builder --win",
    "dev-server": "NODE_ENV=development webpack serve --mode development",
    "electron": "electron .",
    "dev": "concurrently \"NODE_ENV=development webpack serve --mode development\" \"wait-on tcp:3002 && cross-env NODE_ENV=development electron .\"",
    "dev-legacy": "NODE_ENV=development webpack serve --mode development",
    "find-circular": "madge --circular --extensions js,jsx src/",
    "electron-dev": "cross-env NODE_ENV=development electron .",
    "verify-mac-signing": "codesign -v -v --deep 'dist/mac-arm64/Byggbot.app' && spctl --assess --verbose --type execute 'dist/mac-arm64/Byggbot.app'",
    "test-db": "node scripts/test-db-connection.js",
    "test-azure": "node scripts/test-azure-connection.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "ByggBot",
  "dependencies": {
    "@azure-rest/ai-inference": "^1.0.0-beta.1",
    "@azure/core-auth": "^1.9.0",
    "@azure/core-sse": "^2.1.3",
    "@azure/msal-browser": "^4.2.0",
    "@azure/msal-node": "^3.2.2",
    "@azure/msal-react": "^3.0.4",
    "@babel/runtime": "^7.23.9",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/lab": "^6.0.0-beta.28",
    "@mui/material": "^5.15.10",
    "@mui/styles": "^5.15.10",
    "@mui/system": "^5.15.10",
    "@tiptap/core": "^2.2.4",
    "@tiptap/extension-code-block-lowlight": "^2.11.5",
    "@tiptap/extension-image": "^2.11.5",
    "@tiptap/extension-link": "^2.11.5",
    "@tiptap/extension-table": "^2.11.5",
    "@tiptap/extension-table-cell": "^2.11.5",
    "@tiptap/extension-table-header": "^2.11.5",
    "@tiptap/extension-table-row": "^2.11.5",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/react": "^2.2.4",
    "@tiptap/starter-kit": "^2.11.5",
    "axios": "^1.7.9",
    "call-bind-apply-helpers": "^1.0.2",
    "dotenv": "^16.4.7",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.7",
    "exceljs": "^4.4.0",
    "file-type-browser": "^1.0.0",
    "glob": "^10.3.10",
    "highlight.js": "^11.11.1",
    "lowlight": "^3.3.0",
    "lru-cache": "^10.2.0",
    "mailparser": "^3.7.2",
    "markdown-to-jsx": "^7.7.4",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^4.10.38",
    "pg": "^8.13.1",
    "pg-connection-string": "^2.7.0",
    "pg-int8": "^1.0.1",
    "pg-pool": "^3.7.0",
    "pg-protocol": "^1.7.0",
    "pg-types": "^4.0.2",
    "postgres-interval": "^4.0.2",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.1",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^4.0.0",
    "rimraf": "^5.0.5",
    "util": "^0.12.5",
    "uuid": "^11.1.0",
    "webpack": "^5.90.1",
    "webpack-dev-middleware": "^6.1.1",
    "xtend": "^4.0.2"
  },
  "devDependencies": {
    "@azure/identity": "^4.7.0",
    "@azure/keyvault-certificates": "^4.9.0",
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.9",
    "@electron/notarize": "^2.5.0",
    "@npmcli/fs": "^3.1.0",
    "@svgr/webpack": "^8.1.0",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.10.0",
    "electron": "^28.2.3",
    "electron-builder": "^25.1.8",
    "electron-builder-notarize": "^1.5.2",
    "electron-devtools-installer": "^3.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "https-browserify": "^1.0.0",
    "madge": "^8.0.0",
    "mini-css-extract-plugin": "^2.8.0",
    "node-util": "^0.0.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "style-loader": "^3.3.4",
    "terser-webpack-plugin": "^5.3.10",
    "url": "^0.11.4",
    "wait-on": "^7.2.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "resolutions": {
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "inflight": "^2.0.0",
    "@npmcli/move-file": "^3.0.0",
    "npmlog": "^7.0.0",
    "gauge": "^5.0.0"
  },
  "build": {
    "appId": "no.bmf.byggbot",
    "productName": "Byggbot",
    "mac": {
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/byggbot@3x.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "icon": "assets/icons/byggbot@3x.ico",
      "sign": "scripts/azure-signing.js"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Byggbot"
    },
    "files": [
      "build/**/*",
      "src/electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/@azure/msal-node/**/*",
      "node_modules/electron-log/**/*",
      "node_modules/pg/**/*",
      "node_modules/pg-connection-string/**/*",
      "node_modules/pg-pool/**/*",
      "node_modules/pg-protocol/**/*",
      "node_modules/pg-types/**/*",
      "node_modules/@azure/core-auth/**/*",
      "node_modules/@azure-rest/ai-inference/**/*",
      "node_modules/axios/**/*",
      "node_modules/form-data/**/*",
      "node_modules/call-bind-apply-helpers/**/*",
      "node_modules/get-intrinsic/**/*",
      "node_modules/es-set-tostringtag/**/*",
      "node_modules/get-proto/**/*",
      "node_modules/dunder-proto/**/*",
      "src/electron/preload.js",
      "src/electron/services/**/*",
      "src/electron/config/**/*"
    ],
    "afterSign": "scripts/notarize.js",
    "publish": {
      "provider": "github",
      "owner": "Byggmesterforsikring",
      "repo": "byggbot",
      "releaseType": "draft"
    }
  }
}
